<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>0.3</AssemblyVersion>
    <FileVersion>0.3</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="0.13.0" />
    <PackageReference Include="ILRepack.MSBuild.Task" Version="2.0.13" />
    <PackageReference Include="Javlibrary" Version="0.3.0" />
    <PackageReference Include="R18" Version="0.3.0" />
    <PackageReference Include="Asianscreens" Version="0.1.0" />
    <PackageReference Include="Jellyfin.Controller" Version="10.4.0" />
    <PackageReference Include="Jellyfin.Model" Version="10.4.0" />
  </ItemGroup>

  <Target Name="ILRepack" AfterTargets="Build">
    <PropertyGroup>
      <WorkingDirectory>$(MSBuildThisFileDirectory)bin\$(Configuration)\$(TargetFramework)</WorkingDirectory>
    </PropertyGroup>

    <ItemGroup>
      <InputAssemblies Include="$(Home)/.nuget/packages/javlibrary/0.3.0/lib/netstandard2.0/Javlibrary.dll" />
      <InputAssemblies Include="$(Home)/.nuget/packages/r18/0.3.0/lib/netstandard2.0/R18.dll" />
      <InputAssemblies Include="$(Home)/.nuget/packages/asianscreens/0.1.0/lib/netstandard2.0/Asianscreens.dll" />
      <InputAssemblies Include="$(Home)/.nuget/packages/anglesharp/0.13.0/lib/netstandard2.0/AngleSharp.dll" />
      <InputAssemblies Include="$(Home)/.nuget/packages/cloudflaresolverre/1.0.6/lib/netstandard1.1/CloudflareSolverRe.dll" />
    </ItemGroup>

    <ILRepack OutputType="$(OutputType)" MainAssembly="$(AssemblyName).dll" OutputAssembly="$(AssemblyName).dll" InputAssemblies="@(InputAssemblies)" InternalizeExcludeAssemblies="@(InternalizeExcludeAssemblies)" WorkingDirectory="$(WorkingDirectory)" />
  </Target>

  <ItemGroup>
    <None Remove="config_page.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="config_page.html" />
  </ItemGroup>

</Project>
